{
    "manifest_version": 3,
    "name": "Liumou Plugin",
    "version": "0.0.1",
    "description": "Chrome Plugin By liumou",
    "icons": {
        "16": "icons/icon.png",
        "19": "icons/icon.png",
        "38": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action": {
        "default_title": "Liumou Plugin",
        "default_icon": "icons/icon.png",
        "default_popup": "popup/index.html"
    },
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "alarms",
        "commands",
        "storage",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": ["http://*/*", "https://*/*"],
    "content_scripts": [
        {
            "js": ["content/content.js", "cropper.min.js"],
            "css": ["cropper.min.css"],
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_end",
            "match_about_blank": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["popup/*", "contentPage/*", "assets/*", "js/*"],
            "matches": ["<all_urls>"],
            "use_dynamic_url": true
        }
    ],
    "commands": {
        "screenshot-selected-area": {
            "suggested_key": {
                "default": "Ctrl+Shift+Z",
                "windows": "Ctrl+Shift+Z",
                "mac": "Command+Shift+Z"
            },
            "description": "截取所选区域"
        },
        "screenshot-full-screen": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "windows": "Ctrl+Shift+X",
                "mac": "Command+Shift+X"
            },
            "description": "截取全屏"
        },
        "exit_screenshot": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "windows": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "退出截屏"
        },
        "css-detector": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "windows": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "css样式检测"
        }
    }
}
